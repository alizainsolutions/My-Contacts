<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyContacts" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/card_background</item>
    </style>
    <style name="messageTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/card_background</item>
    </style>

    <!-- Style for the dialpad buttons -->
    <style name="DialpadButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item> <!-- Set to 0dp for GridLayout weight distribution -->
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dialpad_button_background</item>
        <item name="android:stateListAnimator">@null</item> <!-- Removes default button shadow/elevation -->
        <item name="android:layout_margin">8dp</item> <!-- Spacing between buttons -->
        <item name="android:fontFamily">sans-serif-light</item> <!-- A lighter font for the numbers -->
    </style>

    <style name="dialerTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#E1FFFFFF</item>
        <item name="colorPrimaryDark">@color/card_background</item>

    </style>
</resources>